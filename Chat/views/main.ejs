    <script>
      const logout = document.getElementById('logout');
      logout.addEventListener("click", (e) => {
        e.preventDefault()
        document.cookie = "username=test; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
        window.location.replace('/login');
      })
    </script>


  </body>
</html>